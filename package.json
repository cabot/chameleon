{
	"name": "chameleon",
	"version": "0.1.0",
	"description": "The default theme for phpbb",
	"main": "gulpfile.js",
	"xo": {
		"rules": {
			"quotes": [
				"error",
				"single"
			]
		},
		"env": {
			"es6": true,
			"browser": true,
			"node": true,
			"jquery": true
		}
	},
	"scripts": {
		"test": "xo && gulp test && stylelint --config ./.stylelintrc './**/*.scss'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phpbb/chameleon.git"
	},
	"author": "Michael Miday (Hanakin)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/phpbb/chameleon/issues"
	},
	"homepage": "https://github.com/phpbb/chameleon#readme",
	"devDependencies": {
		"del": "^6.0.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-cssnano": "^2.1.3",
		"gulp-data": "^1.3.1",
		"gulp-merge-json": "^2.1.1",
		"gulp-nunjucks-render": "^2.2.3",
		"gulp-postcss": "^9.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"moment": "^2.29.1",
		"postcss-discard-comments": "^5.0.1",
		"postcss-pxtorem": "^6.0.0",
		"postcss-rtl": "^1.7.3",
		"postcss-sorting": "^6.0.0",
		"stylelint": "^13.13.1",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.19.0",
		"xo": "^0.41.0"
	}
}
