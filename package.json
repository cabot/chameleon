{
	"name": "chameleon",
	"version": "0.1.0",
	"description": "The default theme for phpbb",
	"main": "gulpfile.js",
	"eslintConfig": {
		"extends": "xo",
		"ignorePatterns": [],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"block-spacing": "error",
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"multiline-comment-style": "off",
			"computed-property-spacing": "off",
			"space-in-parens": "off",
			"capitalized-comments": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"no-lonely-if": "off",
			"unicorn/prefer-module": "off",
			"space-before-function-paren": [
				"error",
				"never"
			]
		},
		"env": {
			"es6": true,
			"browser": true,
			"node": true,
			"jquery": true
		}
	},
	"scripts": {
		"test": "eslint all/js/ && gulp test && stylelint --config ./.stylelintrc './**/*.scss'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phpbb/chameleon.git"
	},
	"author": "Michael Miday (Hanakin)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/phpbb/chameleon/issues"
	},
	"homepage": "https://github.com/phpbb/chameleon#readme",
	"devDependencies": {
		"del": "^6.0.0",
		"eslint": "^7.30.0",
		"eslint-config-xo": "^0.37.0",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-cssnano": "^2.1.3",
		"gulp-data": "^1.3.1",
		"gulp-merge-json": "^2.1.1",
		"gulp-nunjucks-render": "^2.2.3",
		"gulp-postcss": "^9.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.0.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-stylefmt": "^1.1.0",
		"moment": "^2.29.1",
		"postcss-discard-comments": "^5.0.1",
		"postcss-pxtorem": "^6.0.0",
		"postcss-rtl": "^1.7.3",
		"postcss-sorting": "^6.0.0",
		"sass": "^1.35.2",
		"stylelint": "^13.13.1",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.19.0"
	}
}
