{# index.twig #}
{% extends "./layout/layout.twig" %}
{% from './macros/online.twig' import who_is_online %}

{% block title %}
Chameleon
{% endblock %}

{% block main %}
<section class="o-container">
	{% include './includes/forums.twig' %}
</section>
{% endblock %}

{% block footer %}
<div class="o-container">
	<div class="c-tab-card t-tab-card">
		<div class="c-tab-bar-frame t-tab-bar-frame">
			<nav class="c-tab-bar t-tab-bar" data-toggle="tabs">
				<a class="c-tab t-tab is-active" href="#statistics" role="tab" aria-controls="statistics" aria-selected="true">
					{{ 'mdi:chart-line'|icon('iconify', 'o-icon c-tab-icon t-tab-icon')|safe }}
					<span class="c-tab-text t-tab-text">{{ lang.stats }}</span>
				</a>
				<a class="c-tab t-tab" href="#who-is-online" role="tab" aria-controls="who-is-online" aria-selected="false">
					{{ 'mdi:access-point'|icon('iconify', 'o-icon c-tab-icon t-tab-icon')|safe }}
					<span class="c-tab-text t-tab-text">{{ lang.who_is_online }}</span>
				</a>
				<a class="c-tab t-tab" href="#birthdays" role="tab" aria-controls="birthdays" aria-selected="false">
					{{ 'ic:outline-cake'|icon('iconify', 'o-icon c-tab-icon t-tab-icon')|safe }}
					<span class="c-tab-text t-tab-text">{{ lang.birthday }}</span>
				</a>
			</nav>
		</div>
		{% include './includes/stats.twig' %}
		{{ who_is_online('index', online, lang, stats, groups) }}
		{% include './includes/birthdays.twig' %}
	</div>
</div>
{% endblock %}
